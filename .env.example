# Google Gemini API
GOOGLE_API_KEY=your_gemini_api_key_here

# mem0 Configuration
MEM0_API_KEY=your_mem0_api_key_here  # Optional if using hosted mem0

# LinkedIn API (for persona research)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# News API (for industry research)
NEWS_API_KEY=your_news_api_key

# Optional: Other LLM Providers (for fallback)
OPENAI_API_KEY=your_openai_key_if_needed
