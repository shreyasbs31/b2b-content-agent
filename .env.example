# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# Database (for mem0 and metadata)
DATABASE_URL=postgresql://user:password@localhost:5432/content_agent_db

# Redis (for task queue)
REDIS_URL=redis://localhost:6379/0
